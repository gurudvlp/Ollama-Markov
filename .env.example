# Ollama-Markov Configuration

# Operating mode: "training" or "live"
MODE=training

# HTTP server port
OLLAMA_PORT=11434

# Markov chain n-gram order (2-3 recommended)
MARKOV_ORDER=2

# How often to compact transitions into states (number of writes)
COMPACTION_INTERVAL=1000

# Maximum tokens to generate per request
MAX_TOKENS=500

# Sampling temperature (0=deterministic, 1=default, >1=more random)
TEMPERATURE=0.8

# Minimum message length to include in training
MIN_MESSAGE_LENGTH=3

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# SQLite database file path
DB_PATH=ollama_markov.db
